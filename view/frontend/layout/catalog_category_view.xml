<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="top.container">
            <block class="Resolve\Resolve\Block\Promotion\Banners" name="resolve_banner_center_top" as="bml.main.top" template="Resolve_Resolve::promotion/bml.phtml" before="-">
                <arguments>
                    <argument name="section" xsi:type="string">category</argument>
                    <argument name="position" xsi:type="number">0</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Resolve\Resolve\Block\Promotion\Banners" name="resolve_banner_center_bottom" as="bml.main.bottom" template="Resolve_Resolve::promotion/bml.phtml" after="-">
                <arguments>
                    <argument name="section" xsi:type="string">category</argument>
                    <argument name="position" xsi:type="number">1</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.additional">
            <block class="Resolve\Resolve\Block\Promotion\Banners" name="bml.right.banner.bottom" template="Resolve_Resolve::promotion/bml.phtml" after="-">
                <arguments>
                    <argument name="section" xsi:type="string">category</argument>
                    <argument name="position" xsi:type="number">3</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.main">
            <block class="Resolve\Resolve\Block\Promotion\Banners" name="bml.right.banner.top" template="Resolve_Resolve::promotion/bml.phtml" before="-">
                <arguments>
                    <argument name="section" xsi:type="string">category</argument>
                    <argument name="position" xsi:type="number">2</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Resolve\Resolve\Block\Promotion\Pixel\Code"
                   name="resolve_pixel_code_category"
                   template="Resolve_Resolve::pixel/code.phtml"
                   as="resolve_pixel_javascript_code"
                   after="-"
                   ifconfig="resolve/resolve_pixel/enabled" />
        </referenceContainer>
    </body>
</page>
